<div>
  <h2>Sign up</h2>
  
  <%= bootstrap_form_for :user,url: {:controller=>'users', :actions => "create"} do |f| %>
    <%= f.text_field :name  %>
    <%= f.email_field :email  %>
    <%= f.password_field :password  %>
    <%= f.password_field :password_confirmation  %>
    <%= f.submit  %>
  <% end %>
</div>

<div>
  <h2>Log in</h2>
  <%= bootstrap_form_for :session, url: :login do |f| %>
    <%= f.text_field :email %>
    <%= f.password_field :password %>
    <%= f.submit "log in"%>
  <% end %>
</div>



